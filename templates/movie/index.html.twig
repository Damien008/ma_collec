{% extends 'base.html.twig' %}

{% block title %}Movie index{% endblock %}

{% block body %}
    <h1>Movie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Poster</th>
                <th>Genre</th>
                <th>Synopsis</th>
                <th>Country</th>
                <th>Support</th>
                <th>Duration</th>
                <th>Trailer</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for movie in movies %}
            <tr>
                <td>{{ movie.id }}</td>
                <td>{{ movie.title }}</td>
                <td>{{ movie.poster }}</td>
                <td>{{ movie.genre }}</td>
                <td>{{ movie.synopsis }}</td>
                <td>{{ movie.country }}</td>
                <td>{{ movie.support }}</td>
                <td>{{ movie.duration ? movie.duration|date('Y-m-d') : '' }}</td>
                <td>{{ movie.trailer }}</td>
                <td>
                    <a href="{{ path('movie_show', {'id': movie.id}) }}">show</a>
                    <a href="{{ path('movie_edit', {'id': movie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('movie_new') }}">Create new</a>
{% endblock %}
